import "fs" as fs
import "json" as json

export function load_tasks(filename)
    if call fs.exists(filename)
        set content call fs.read(filename)
        return call json.parse(content)
    end
    return []
end

export function save_tasks(filename, tasks)
    set content call json.stringify(tasks)
    call fs.write(filename, content)
    return true
end
