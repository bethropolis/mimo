show "=== Decorators ==="

@logged
function compute(x)
    return * x x
end

function logged(fn)
    return function(...args)
        show + "Calling with " (call len(args))
        return call fn(...args)
    end
end

call compute(4) -> square
show square

function retry(times)
    return function(fn)
        return function(...args)
            let attempts 0
            while < attempts times
                try
                    return call fn(...args)
                catch e
                    set attempts + attempts 1
                    if >= attempts times
                        throw e
                    end
                end
            end
            return null
        end
    end
end

set unstable_attempts 0

@retry(3)
function unstable()
    set unstable_attempts + unstable_attempts 1
    if < unstable_attempts 3
        throw "temporary"
    end
    return "ok"
end

show call unstable()

function bold(fn)
    return function(...args)
        return + "**" + call fn(...args) "**"
    end
end

function italic(fn)
    return function(...args)
        return + "_" + call fn(...args) "_"
    end
end

@bold
@italic
function label(name)
    return name
end

show call label("Mimo")

@logged
export function exported(name)
    return + "Hi " name
end

show call exported("Agent")
show "=== Done ==="
