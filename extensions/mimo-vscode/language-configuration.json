{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ]
  ],
  "autoClosingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ],
    [
      "\"",
      "\""
    ],
    [
      "`",
      "`"
    ]
  ],
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ],
    [
      "\"",
      "\""
    ],
    [
      "`",
      "`"
    ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(?:function|if|while|for|try|match)\\b",
      "end": "^\\s*end\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(?:function|if|elif|else|while|for|try|catch|match|case|default)\\b.*$",
    "decreaseIndentPattern": "^\\s*(?:end|elif|else|catch|case|default)\\b.*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:case|default)\\s*.*:\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
