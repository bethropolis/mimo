{
  "name": "mimo-vscode",
  "displayName": "Mimo Language",
  "description": "VS Code language support for Mimo (.mimo)",
  "version": "0.0.1",
  "publisher": "local",
  "license": "MIT",
  "icon": "icons/icon-128.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mimo",
    "onCommand:mimo.runFile"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mimo",
        "aliases": [
          "Mimo",
          "mimo"
        ],
        "extensions": [
          ".mimo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mimo",
        "scopeName": "source.mimo",
        "path": "./syntaxes/mimo.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mimo",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "mimo.runFile",
        "title": "Mimo: Run Current File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mimo.runFile",
          "group": "navigation",
          "when": "resourceExtname == .mimo"
        }
      ],
      "explorer/context": [
        {
          "command": "mimo.runFile",
          "group": "navigation",
          "when": "resourceExtname == .mimo"
        }
      ]
    },
    "configuration": {
      "title": "Mimo",
      "properties": {
        "mimo.lint.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable linting for Mimo files"
        },
        "mimo.lint.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Lint files when saved"
        },
        "mimo.lint.onType": {
          "type": "boolean",
          "default": true,
          "description": "Lint files as you type (debounced)"
        },
        "mimo.lint.delay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before linting on type"
        },
        "mimo.lint.rules.no-unused-vars": {
          "type": "boolean",
          "default": true,
          "description": "Warn about unused variables and parameters"
        },
        "mimo.lint.rules.prefer-const": {
          "type": "boolean",
          "default": true,
          "description": "Suggest using 'const' for variables that are never reassigned"
        },
        "mimo.lint.rules.no-magic-numbers": {
          "type": "boolean",
          "default": false,
          "description": "Warn about magic numbers in code"
        }
      }
    }
  },
  "scripts": {
    "validate": "node ./scripts/validate.cjs",
    "test": "node ./scripts/smoke-test.cjs",
    "check": "bun run validate && bun run test",
    "package:dry": "bun run check && npx @vscode/vsce package --no-dependencies --allow-missing-repository --allow-star-activation --out mimo-vscode-dry.vsix",
    "package": "bun run check && npx @vscode/vsce package --no-dependencies --allow-missing-repository --allow-star-activation"
  }
}
